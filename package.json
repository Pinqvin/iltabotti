{
  "name": "iltabotti",
  "version": "1.0.0",
  "description": "Iltabotti is a Telegram bot that interacts with IltaSanomat and IltaLehti links, posting the top comment of any given link",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage --verbose",
    "start": "node dist/index.js",
    "watch": "nodemon -e ts --watch src --exec \"node --require ts-node/register\" src/index.ts",
    "watch-build": "tsc -w"
  },
  "author": "Juuso Tapaninen <juuso.tapaninen@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/pino": "^6.3.4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "envalid": "^7.1.0",
    "fp-ts": "^2.9.3",
    "got": "^11.8.1",
    "io-ts": "^2.2.13",
    "pino": "^6.9.0",
    "telegraf": "^4.3.0"
  }
}
